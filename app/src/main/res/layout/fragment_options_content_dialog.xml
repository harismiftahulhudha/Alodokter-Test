<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/size300"
    android:layout_height="@dimen/size300"
    android:layout_gravity="center"
    app:cardCornerRadius="@dimen/size16"
    app:cardElevation="@dimen/size8">

    <LinearLayout
        android:id="@+id/linearOptions"
        android:layout_width="@dimen/size300"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/space16">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="@string/option_content"
            android:textColor="@color/grey_500"
            android:textSize="@dimen/font20" />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space16"
            android:background="@drawable/bg_button_primary"
            android:text="@string/delete_content"
            android:textColor="@color/white" />

    </LinearLayout>

</androidx.cardview.widget.CardView>